{
	"extends": "airbnb/base",

	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
	},

	"plugins": [],

	"ecmaFeatures": {
	},

	"globals": {
	},

	"rules": {
		"indent": [2, "tab"],
		"space-before-function-paren": 0,
		"arrow-parens": [2, "always"],
		"arrow-body-style": [2, "always"],
		"prefer-const": 1,
		"no-var": 2,
		"vars-on-top": 1,
		"spaced-comment": 0,

		"no-process-exit": 0,
		"no-param-reassign": 1,
		"space-in-parens": 0,

		"camelcase": 0,
		"comma-dangle": 0,
		"dot-notation": 0,
		"eqeqeq": 1,
		"global-strict": 0,
		"key-spacing": 1,
		"new-cap": 0,
		"no-alert": 0,
		"no-extra-boolean-cast": 1,
		"no-mixed-spaces-and-tabs": 1,
		"no-multi-spaces": 1,
		"no-shadow": 1,
		"no-undef-init": 1,
		"no-underscore-dangle": 0,
		"no-unused-vars": 1,
		"no-use-before-define": 1,
		"quotes": [0, "single"],
		"space-infix-ops": 0
	}
}
